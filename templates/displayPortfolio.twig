{% extends "base.twig" %}

{% block title %}{{user.portfolio}} | PixSalle{% endblock %}

{% block content %}
<div class="col-lg-6 offset-lg-3">
  <h1 class="display-3 my-4">{{user.portfolio}}</h1>
    <div class="d-flex justify-content-center align-items-center flex-column">
      <p class="lead text-muted">All albums of portfolio</p>
      <a href="/portfolio/album" class="btn btn-success mb-3">+ Album</a>
    </div>
  </div>
  <div class="album py-5 bg-light">
    {% if info %}
        <div class="alert alert-success" role="alert">
          {{info}}
        </div>
    {% endif %}
      <div class="container">
        <div class="d-flex flex-row flex-wrap justify-content-center">
          {% for album in arrayAlbum %}
            <div class="card shadow-sm m-2 d-flex" style="width: 15rem;">
              <img class="p-5" src="/barcodes/folder.svg" alt="album{{album.id}}">
              <div class="card-body d-flex flex-column justify-content-between align-items-center">
                <p class="card-text lead">{{album.name}}</p>
                <a href="/portfolio/album/{{album.id}}" class="btn btn-primary">Open</a>
              </div>
            </div>
          {% endfor %}
          </div>
      </div>
    </div>
  {% endblock %}
