{% extends "base.twig" %}

{% block title %}New portfolio | PixSalle{% endblock %}

{% block content %}
<div class="col-lg-6 offset-lg-3">
  <h1 class="display-3 my-4">New Portfolio</h1>
    <div class="d-flex justify-content-center align-items-center flex-column">
      <p class="lead text-muted">You don't have portfolio, so to be able to create your own Portfolio you have to define a name.</p>
    </div>
  <form class="row justify-content-center mt-5" action="/portfolio" method="POST">
    <div class="form-group">
      <label for="name">Name of your portfolio</label>
      <input class="form-control" id="name" name="name" type="text" required>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="m-3 btn btn-primary">Create</button>
    </div>
  </form>
{% endblock %}
