{% extends "base.twig" %}

{% block title %}Album | PixSalle{% endblock %}

{% block content %}
<div class="col-lg-6 offset-lg-3">
  <h1 class="display-3 my-4">{{photosAlbum[0].nameAlbum}}</h1>
    <div class="d-flex justify-content-center align-items-center flex-column">
      {% if photosAlbum %}
          <p class="lead text-muted">Here you can explore all the pictures available in selected album.</p>
      {% else %}
          <p class="lead">Album is empty.</p>
      {% endif %}
    </div>
    <form class="col-lg-4 d-flex flex-row align-items-center" action="/portfolio/album/{{idAlbum}}" method="post">
      <div class="form-group">
        <input class="form-control" name="url" type="text" placeholder="Url for new photo" required>
      </div>
        <button type="submit" class="m-3 btn btn-primary">ADD</button>
    </form>
  </div>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="d-flex flex-row flex-wrap justify-content-center">
        {% for photo in photosAlbum %}
          <div class="card shadow-sm m-3 d-flex" style="width: 20rem;">
            <img src="{{photo.url}}" alt="photo{{photo.id}}">
            <div class="card-body d-flex flex-column justify-content-between">
              <a href="/portfolio/album/{{photo.idAlbum}}" class="btn btn-primary">{{photo.nameAlbum}}</a>
              <p class="card-text lead">{{photo.usernameUser}}</a>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">{{photo.publishDate}}</small>
              </div>
            </div>
          </div>
        {% endfor %}
        </div>
    </div>
  </div>
{% endblock %}
